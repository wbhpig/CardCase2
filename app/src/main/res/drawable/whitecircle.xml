<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 设置圆的填充颜色 -->
    <solid android:color="#FFFFFF" />

    <!-- 设置边框的宽度和颜色 -->
    <stroke
        android:width="6dp"
        android:color="#CCCCCC" />
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
    <!-- 设置圆的大小 -->
    <size
        android:width="100dp"
        android:height="100dp" />
</shape>