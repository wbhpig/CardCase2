<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="top">

            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ion_chevron_back"
                android:contentDescription="@string/back_button_desc" />


            <TextView
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:textSize="28dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/backbutton"
                android:gravity="top"
                android:text="Back"
                android:textColor="#192DE1" />

            <ImageView
                android:layout_width="226dp"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="Logo"
                android:src="@drawable/cardcaselogo" />

            <ImageView
                android:id="@+id/ellipse"
                android:layout_width="213dp"
                android:layout_height="183dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="207dp"
                android:layout_marginTop="-51dp"
                android:layout_marginRight="-15dp"
                android:src="@drawable/ellipse" />
        </RelativeLayout>

        <TextView
            android:id="@+id/signUpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Full Name"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/fullname_string"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Jaka Mambang"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPersonName"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColorHint="#A0A0A0"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Email"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/email_string"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="email@example.com"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textEmailAddress"
                android:textColorHint="#A0A0A0"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Password"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/password_string"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="************"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPassword"
                android:textColorHint="#A0A0A0"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:password="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/confirmpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Confirm Password"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/confirmpassword_string"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="************"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPassword"
                android:textColorHint="#A0A0A0"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:password="true"/>

        </LinearLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textStyle="bold" /> <!-- 添加阴影效果 -->

        <!-- Log In Text with clickable link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logInLink1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Already have an account?"
                android:textColor="#5074E7"
                android:textSize="15sp"
                android:contentDescription="@string/already_have_account_desc" />


            <Button
                android:id="@+id/logInLink_button"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@+id/logInLink1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="Log in"
                android:textColor="#5074E7"
                android:textSize="12sp"
                android:contentDescription="@string/log_in_button_desc"
                />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>