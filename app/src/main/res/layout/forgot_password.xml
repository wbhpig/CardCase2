<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        >


        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true">

            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ion_chevron_back"
                android:contentDescription="@string/back_button_desc" />


            <TextView
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:textSize="28dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/backbutton"
                android:gravity="top"
                android:text="Back"
                android:textColor="#192DE1" />

            <ImageView
                android:layout_width="226dp"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="Logo"
                android:src="@drawable/cardcaselogo" />

            <ImageView
                android:id="@+id/ellipse"
                android:layout_width="213dp"
                android:layout_height="183dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="207dp"
                android:layout_marginTop="-51dp"
                android:layout_marginRight="-15dp"
                android:src="@drawable/ellipse" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ForgotPassword_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_below="@id/head"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ForgotPassword_title"
            android:layout_marginLeft="25dp"
            android:textColor="#7C7C7C"
            android:layout_marginTop="23dp"
            android:text="Verify your email address"
            android:textSize="22sp" />


        <!-- Sign Up Button -->


        <LinearLayout
            android:id="@+id/editbox"
            android:layout_width="360dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Verify"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailadress_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Email Adress"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_string"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:hint="email@example.com"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColorHint="#A0A0A0"
                android:textSize="20dp"/>

        </LinearLayout>



        <Button
            android:id="@+id/NextButton"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/editbox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Next"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" /> <!-- 添加阴影效果 -->



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>